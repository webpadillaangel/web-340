<% include header %>

<body>
  <% include navbar %>

  <div class="container">
    <div class="row center-content">
      <div class="col-lg-12 text-left">
        <h1 class="mt-5">Create a New Employee Record</h1>
        <hr />

        <div class="col-row mt-5">
          <div class="col-md-6 offset-md-3">
            <form
              action="/process"
              method="post"
              class="needs-validation employee-form"
              novalidate
            >
              <div class="form-group row">
                <label for="firstName" class="col-sm-3 col-form-label"
                  >First Name:
                </label>
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control"
                    name="firstName"
                    placeholder="Employee First Name"
                    maxlength="30"
                    required
                  />
                  <div class="invalid-feedback">
                    A first name is required.
                  </div>
                  <div class="valid-feedback">
                    Great!
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <label for="lastName" class="col-sm-3 col-form-label"
                  >Last Name:
                </label>
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control"
                    name="lastName"
                    placeholder="Employee Last Name"
                    maxlength="30"
                    required
                  />
                  <div class="invalid-feedback">
                    A last name is required.
                  </div>
                  <div class="valid-feedback">
                    Great!
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <label for="lastName" class="col-sm-3 col-form-label"
                  >Email:
                </label>
                <div class="col-sm-9">
                  <input
                    type="email"
                    class="form-control"
                    name="email"
                    placeholder="Employee Email Address"
                    maxlength="30"
                    required
                  />
                  <div class="invalid-feedback">
                    Please enter a valid email.
                  </div>
                  <div class="valid-feedback">
                    Great!
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <input name="_csrf" value="<%= csrfToken %>" type="hidden" />
                <div class="col-sm-9 offset-sm-3">
                  <button type="submit" class="btn btn-block ems-bg-color">
                    Submit
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% include footer %> <% include scripts %>
</body>
