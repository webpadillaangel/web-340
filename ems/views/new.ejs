<% include header %>

<body>
  <% include navbar %>

  <div class="container">
    <div class="row center-content">
      <div class="col-lg-12 text-left">
        <h1 class="mt-4">Create a New Employee Record</h1>
        <hr />

        <div class="col-row mt-4">
          <div class="col-md-6 offset-md-3">
            <form
              action="/process"
              method="post"
              class="needs-validation employee-form"
              novalidate
            >
              <div class="form-group row">
                <label for="firstName" class="col-sm-3 col-form-label"
                  >First Name:
                </label>
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control form-control-sm"
                    name="firstName"
                    placeholder="Employee First Name"
                    maxlength="30"
                    required
                  />
                  <div class="invalid-feedback">
                    A first name is required.
                  </div>
                  <div class="valid-feedback">
                    Great!
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <label for="lastName" class="col-sm-3 col-form-label"
                  >Last Name:
                </label>
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control form-control-sm"
                    name="lastName"
                    placeholder="Employee Last Name"
                    maxlength="30"
                    required
                  />
                  <div class="invalid-feedback">
                    A last name is required.
                  </div>
                  <div class="valid-feedback">
                    Great!
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <label for="email" class="col-sm-3 col-form-label"
                  >Email:
                </label>
                <div class="col-sm-9">
                  <input
                    type="email"
                    class="form-control form-control-sm"
                    name="email"
                    placeholder="Employee Email Address"
                    maxlength="30"
                    required
                  />
                  <div class="invalid-feedback">
                    Please enter a valid email.
                  </div>
                  <div class="valid-feedback">
                    Great!
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <label for="info" class="col-sm-3 col-form-label"
                  >Fun Info:
                </label>
                <div class="col-sm-9">
                  <textarea class="form-control form-control-sm" id="exampleFormControlTextarea1" rows="3" name="info"  required></textarea>
                  <small id="infoHelp" class="form-text text-muted">
                    Please provide some fun information. Example: Favorite foods, hobbies, etc..
                  </small>
                  <div class="invalid-feedback">
                    Please give us something, we really want to get to know you!
                  </div>
                  <div class="valid-feedback">
                    Great!
                  </div>
                </div>
              </div>              

              <div class="form-group row mb-0">
                <input name="_csrf" value="<%= csrfToken %>" type="hidden" />
                <div class="col-sm-9 offset-sm-3">
                  <button type="submit" class="btn btn-block btn-sm ems-bg-color">
                    Submit
                  </button>
                  <br>
                  <a class="view-link" href="/list"> <i class="fas fa-chevron-left"></i> Go back to the list</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% include footer %> <% include scripts %>
</body>
