<% include header %>

<body>
  <% include navbar %>

  <div class="container">
    <div class="row center-content">
      <div class="col-lg-12 text-left">
        <h1 class="mt-5">Create New Employee</h1>
        <hr>
        <div class="form-wrapper mt-5">
          <form action="/process" method="post" class="needs-validation employee-form" novalidate>

            <div class="form-group row">
              <label for="firstName" class="col-sm-3 col-form-label">First Name: </label>
              <div class="col-sm-9">
                <input type="text" class="form-control" name="firstName" placeholder="Employee First Name" required>
                <div class="invalid-feedback">
                  A first name is required.
                </div>
                <div class="valid-feedback">
                  Awesome!
                </div>
              </div>
            </div>
        
            <div class="form-group row">
              <label for="lastName" class="col-sm-3 col-form-label">Last Name: </label>
              <div class="col-sm-9">
                <input type="text" class="form-control" name="lastName" placeholder="Employee Last Name" required>
                <div class="invalid-feedback">
                  A last name is required.
                </div>
                <div class="valid-feedback">
                  Awesome!
                </div>                
              </div>
            </div>
        
            <div class="form-group row">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="col-sm-9 offset-sm-3">
                <button type="submit" class="btn btn-block ems-bg-color">Submit</button>
              </div>
              
            </div>
            
          </form>
        </div>
      </div>
    </div>
  </div>

<div class="align-items-center" width="50vw">
</div>
  

  <% include footer %> <% include scripts %>
</body>
