<% include header %>

<body>
  <% include navbar %>

  <div class="container">
    <div class="row center-content">
      <div class="col-lg-12 text-left">
        <h1 class="mt-4">Employee List</h1>
        <hr />

        <div class="col-row">
          <div class="col-md-8 offset-md-2 table-responsive">
            <table class="table table-bordered table-striped table-sm">
              <div class="d-flex flex-row-reverse add-button mb-3 mt-2">                
                <a href="/new" class="btn btn-outline-primary btn-sm ems-color-main outline-btn-main"> <i class="fas fa-plus"></i> &nbsp; Add New Entry</a> &nbsp;  &nbsp;
                <a href="/" class="btn btn-outline-primary btn-sm ems-color-main outline-btn-main"> <i class="fas fa-home"></i> Home</a>
              </div>

              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">First Name</th>
                  <th scope="col">Last Name</th>
                  <th scope="col">Email</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody class="table-hover">
                <% if(employees.length) { employees.forEach(function(emp, index) {
                %>
                <tr scope="row">
                  <td><%= index +1 %></td>
                  <td><%= emp.firstName %></td>
                  <td><%= emp.lastName %></td>
                  <td><%= emp.email %></td>
                  <td><a href="/view/<%= emp._id %>" class="btn btn-info btn-sm btn-block">View</a></td>
                </tr>
                <% }); }else{ %>
                <td>0</td>
                <td>No records were found. <a href="/new">Create New Entry</a></td>
                <td></td>
                <td></td>
              </tbody>
              <% } %>              
            </table>            
          </div>
        </div> 
      </div>
    </div>
  </div>

  <% include footer %> <% include scripts %>
</body>
