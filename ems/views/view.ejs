<% include header %>

<body>
  <% include navbar %>

  <div class="container">
    <div class="row center-content">
      <div class="col-lg-12 text-left">
        <h1 class="mt-5">Employee Info</h1>
        <hr />

        <div class="col-row">
          <div class="col-md-8 offset-md-2 mt-5">

            <div class="card mb-3" style="max-width: 680px;">
                <div class="row no-gutters m-2">
                  <div class="col-md-4">
                    <img src="../images/profile.png" class="card-img" alt="...">
                  </div>
                  <div class="col-md-8">
                    <% if(employee.length) { employee.forEach(function(emp, index) {
                    %>                      
                    <div class="card-body">
                      <h5 class="card-title"><%= `${emp.firstName} ${emp.lastName} | ${emp.email}`  %></h5>
                      <p class="card-text"><%= emp.info %></p>
                      <a href="/list"> <i class="fas fa-chevron-left"></i> Go back to the list</a>
                    </div>
                   <% });} %>
                  </div>
                </div>
              </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <% include footer %> <% include scripts %>
</body>
