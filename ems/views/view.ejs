<% include header %>

<body>
  <% include navbar %>

  <div class="container">
    <div class="row center-content">
      <div class="col-lg-12 text-left">
        <h1 class="mt-4">Employee Info</h1>
        <hr />

        <div class="col-row">
          <div class="col-md-8 offset-md-2 mt-5">

            <div class="card mb-3" style="max-width: 680px;">
                <div class="row no-gutters">
                  <div class="col-md-3">
                    <img src="../images/profile.png" class="card-img" alt="...">
                  </div>
                  <div class="col-md-8">
                    <% if(employee.length) { employee.forEach(function(emp, index) {
                    %>                      
                    <div class="card-body">
                      <h5 class="card-title"><labeL>Name: </label><%= ` ${emp.firstName} ${emp.lastName}` %></h5>
                      <p class="card-text"><label class="view-label">Email:</label> <%= emp.email %> 
                        <br>
                        <label class="view-label">About:</label> <%= emp.info %>
                        <br>
                        <a class="view-link" href="/list"> <i class="fas fa-chevron-left"></i> Go back to the list</a>
                      </p>                                            
                    </div>
                   <% });} %>
                  </div>
                </div>
              </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <% include footer %> <% include scripts %>
</body>
